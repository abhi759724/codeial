<link rel="stylesheet" href="/css/home.css">
<div id="home-container">
    <section id="feed-posts">
        <!-- <h4>Post</h4> -->
        <% if(locals.user){ %>
            <form action="/posts/create" id="new-post-form" method="post">
                <textarea name="content" cols="30" rows="3" placeholder="type here"></textarea>
                <input type="submit" value="Post">
            </form>
            <% } %>
                <div id="feed-posts-lists">
                    <ul>
                        <% for(post of posts){ %>
                            <%- include('_post') %>
                                <% } %>
                    </ul>
                </div>
    </section>
    <section id="user-friends">
        <h3>Friends</h3>
        <ul id="friend-list">
            <% for(friend of all_friends){ %>
                <li id="friend-<%= friend.id %>">
                    <img id="profileImage" src="<%= friend.to_user.avatar %>" alt="<%= friend.to_user.name %>">

                    <div class="links">
                        <a href="/users/profile/<%= friend.to_user.id %>" class="user-friend-name">
                            <%= friend.to_user.name %>
                        </a>

                        <button>
                            <a href="/friends/friendship/remove/<%= friend.id %>"
                                class="remove-friend remove-add-btn">Remove
                            </a>
                        </button>
                    </div>
                </li>
                <% } %>
        </ul>
    </section>




    </section>
    <section id="user-list">
        <h3>Users</h3>
        <ul>
            <% for(u of All_users){ %>
                <% if(u.id !=locals.user.id){ %>
                    <li>
                        <img id="profileImage" src="<%= u.avatar %>" alt="<%= u.name %>" width="100"></img>
                        <div class="links">
                            <a class="user-list-name" href="/users/profile/<%= u.id %>">
                                <%= u.name %>
                            </a>
                            <button>
                                <a class="add-friend-btn remove-add-btn"
                                    href="/friends/friendship/add/?toUser=<%= u._id %>">
                                    <!-- /?id=<%=u._id%> -->
                                    Add Friend
                                </a>
                            </button>
                        </div>

                    </li>
                    <% } %>
                        <% } %>
        </ul>
    </section>
</div>
